@model MovieProjectAssignment.Models.Movie

@{
    ViewBag.Title = "AddMovie";
}

<h4>Add Movie-page</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @*Title, Director, release year, price*@

    <hr />

    <div class="form-group">
        <p>Please enter Title of Movie:</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <p>Please enter Director:</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Director, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <p>Please enter Release Year:</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ReleaseYear, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <p>Please enter Price:</p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    @*Submit button*@
    <br /><div class="form-group">
            <input type="submit" value="Submit Movie" class="btn btn-default" />
    </div>
</div>
}

<br /><h2>@ViewBag.Message</h2><br />

